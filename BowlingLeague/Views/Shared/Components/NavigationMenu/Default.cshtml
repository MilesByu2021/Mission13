@model IEnumerable<string>

<div class="container">
    <div class="center">
        <div class="row">
            <a asp-action="Index" asp-controller="Bowlers" class="btn @(ViewBag.SelectedType==null ?
                "btn-primary" : "btn-outline-secondary") col-md">
                Home
            </a>
        </div>
    </div>
</div>

<div class="container">
    <div class="center">
        <div class="row">
            @foreach (string t in Model)
            {
                <a asp-action="Index" asp-controller="Home" asp-route-teamName="@t"
                   class="btn @(ViewBag.SelectedType == t ? "btn-primary" : "btn-outline-secondary") col-md">
                    @t
                </a>
            }
        </div>
    </div>
</div>
