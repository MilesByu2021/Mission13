@model IEnumerable<BowlingLeague.Models.Bowlers>

@{
    ViewData["Title"] = "Bowling List";
}

<style>
    * {
        font-family: sans-serif;
    }

    .content-table {
        border-collapse: collapse;
        margin: 25px 0;
        font-size: 0.9em;
        min-width: 400px;
        border-radius: 5px 5px 0 0;
        overflow: hidden;
        box-shadow: 0 0 20px rgba(0, 0, 0, 0.15);
    }

    .content-table thead tr {
            background-color: #009879;
            color: #ffffff;
            text-align: left;
            font-weight: bold;
    }

    .content-table th,
    .content-table td {
        padding: 12px 15px;
    }

    .content-table tbody tr {
        border-bottom: 1px solid #dddddd;
    }

    .content-table tbody tr:nth-of-type(even) {
        background-color: #f3f3f3;
    }

    .content-table tbody tr:last-of-type {
        border-bottom: 2px solid #009879;
    }

    .content-table tbody tr.active-row {
        font-weight: bold;
        color: #009879;
    }
    .container {
        width: 98%;
        margin: 1%;
        text-align: center;
    }

</style>

<div class="container">
    <h1>Bowlers Information</h1>

    <br />

    <p>
        <a asp-controller="Bowlers" asp-action="Create" class="btn btn-primary">Create Bowler</a>
    </p>

    <table class="content-table">
        <thead>
            <tr>
                <th>
                    @Html.DisplayNameFor(model => model.BowlerFirstName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BowlerLastName)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BowlerMiddleInit)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BowlerAddress)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BowlerCity)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BowlerState)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BowlerZip)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.BowlerPhoneNumber)
                </th>
                <th>
                    @Html.DisplayNameFor(model => model.TeamID)
                </th>
                <th></th>
                <th></th>
                <th></th>
            </tr>
        </thead>

        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.BowlerFirstName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BowlerLastName)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BowlerMiddleInit)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BowlerAddress)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BowlerCity)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BowlerState)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BowlerZip)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.BowlerPhoneNumber)
                    </td>
                    <td>
                        @Html.DisplayFor(modelItem => item.TeamID)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.BowlerID" class="btn btn-warning btn-sm">Edit</a>
                    </td>
                    <td>
                        <a asp-action="Details" asp-route-id="@item.BowlerID" class="btn btn-info">Details</a>
                    </td>
                    <td>
                        <a asp-controller="Bowlers" asp-action="Delete" asp-route-id="@item.BowlerID" class="btn btn-danger btn-sm">Delete</a>
                    </td>
                </tr>
             }
        </tbody>
    </table>
</div>
